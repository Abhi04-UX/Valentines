    <script>
        // Customize names here
        const toName = "My Dearest"; // Change to your girlfriend's name
        const fromName = "Your Love"; // Change to your name

        document.getElementById('toName').textContent = toName;
        document.getElementById('fromName').textContent = fromName;

        // Create floating hearts background
        const heartBg = document.getElementById('heartBg');
        const heartSymbols = ['üíï', 'üíñ', 'üíó', 'üíì', 'üíù'];
        
        for (let i = 0; i < 20; i++) {
            const heart = document.createElement('div');
            heart.className = 'floating-heart';
            heart.textContent = heartSymbols[Math.floor(Math.random() * heartSymbols.length)];
            heart.style.left = Math.random() * 100 + '%';
            heart.style.animationDelay = Math.random() * 15 + 's';
            heart.style.animationDuration = (Math.random() * 10 + 10) + 's';
            heartBg.appendChild(heart);
        }

        // Envelope opening
        const envelopeWrapper = document.getElementById('envelopeWrapper');
        envelopeWrapper.addEventListener('click', function() {
            if (!this.classList.contains('opened')) {
                this.classList.add('opened');
            }
        });

        // Button interactions
        const btnYes = document.getElementById('btnYes');
        const btnNo = document.getElementById('btnNo');
        const responseScreen = document.getElementById('responseScreen');

        let noButtonTexts = [
            'No',
            'Are you sure? ü•∫',
            'Really? üíî',
            'Think again... ü§î',
            'Please reconsider üíï',
            'One more chance? üôè',
            'Pretty please? ü•π',
            'But why not? üò¢',
            'Give it a thought üí≠',
            'You might regret this... üòî',
            'Last chance! üíù',
            'I believe in us! ‚ú®',
            'Come on... üíó',
            'Pretty pretty please? üåπ',
            'Think of all our memories üì∏',
            'Don\'t break my heart üíî',
            'You know you want to... üòä'
        ];
        let noClickCount = 0;
        let yesGrowthLevel = 1;

        btnNo.addEventListener('mouseenter', function() {
            // Loop through the messages indefinitely
            noClickCount = (noClickCount + 1) % noButtonTexts.length;
            this.textContent = noButtonTexts[noClickCount];
            
            // Make Yes button bigger each time
            yesGrowthLevel += 0.15;
            btnYes.style.transform = `scale(${yesGrowthLevel})`;
        });

        btnYes.addEventListener('click', function() {
            // Create massive confetti and hearts explosion
            for (let i = 0; i < 150; i++) {
                setTimeout(() => {
                    createConfetti();
                }, i * 20);
            }
            
            for (let i = 0; i < 100; i++) {
                setTimeout(() => {
                    createHeart();
                }, i * 30);
            }
            
            // Show response screen
            setTimeout(() => {
                responseScreen.classList.add('active');
            }, 400);
        });

        function createConfetti() {
            const confetti = document.createElement('div');
            confetti.className = 'confetti';
            confetti.style.left = Math.random() * 100 + '%';
            confetti.style.top = -20 + 'px';
            
            const colors = ['#f687b3', '#db2777', '#fbb6ce', '#f9a8d4', '#ec4899', '#be185d', '#fce7f3'];
            confetti.style.background = colors[Math.floor(Math.random() * colors.length)];
            confetti.style.animationDelay = Math.random() * 0.3 + 's';
            confetti.style.animationDuration = (Math.random() * 2 + 3) + 's';
            
            document.body.appendChild(confetti);
            
            setTimeout(() => confetti.remove(), 5000);
        }

        function createHeart() {
            const heart = document.createElement('div');
            heart.className = 'confetti heart';
            const heartSymbols = ['üíï', 'üíñ', 'üíó', 'üíì', 'üíù', '‚ù§Ô∏è', 'üíò'];
            heart.textContent = heartSymbols[Math.floor(Math.random() * heartSymbols.length)];
            heart.style.left = Math.random() * 100 + '%';
            heart.style.top = -50 + 'px';
            heart.style.animationDelay = Math.random() * 0.5 + 's';
            heart.style.animationDuration = (Math.random() * 2 + 3.5) + 's';
            
            document.body.appendChild(heart);
            
            setTimeout(() => heart.remove(), 5000);
        }
    </script>
